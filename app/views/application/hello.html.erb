<% if !params[:location].blank? %>
  <% @museums = Museum.where(location: params[:location]) %>
<% end %>

<div class="filter">
  <p> Search by Location: </p>
  <%= form_tag("/", method: "get") do %>
    <%= select_tag "location", options_from_collection_for_select(Location.all, "id", "name"), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
  <br>
</div>

<div class="add">
  <% if user_signed_in? %>
    <%= link_to "Add Museum", new_museum_path %>
  <% end %>
  <br>
  <br>
</div>

<div id="museum_list">
  <ul>
  </ul>
</div>
