<div class="add">
  <% if user_signed_in? %>
    <%= link_to "Edit", edit_museum_artwork_path(@artwork.museum, @artwork) %> |
    <%= link_to "Remove", museum_artwork_path(@artwork.museum, @artwork), method: "delete" %>
    <!-- <%= link_to "Comment", new_artwork_user_comment_path(@artwork) %> -->
  <% end %>
</div>

<div class="artwork_show">
  <h2><%= @artwork.title %></h2>
  <p><strong>ARTIST:</strong> <%= @artwork.artist %></p>
  <p><strong>YEAR CREATED:</strong> <%= @artwork.year %></p>
  <p id="body-<%= @artwork.id %>"><strong>DESCRIPTION:</strong> <%= truncate @artwork.description, length: 80, separator: ' ' %></p>
  <button class="js-more" data-id="<%= @artwork.id %>" data-museum="<%= @artwork.museum.id %>">Read More</button>
</div>
<br>

<div class="categories_list">
    <strong>CATEGORIES:</strong>
    <% @artwork.categories.each do |category| %>
      <%= link_to category.name, category_path(category) %> |
    <% end %>
</div>

<div class="comments" id="<%=@artwork.id%>" data-id="<%=@artwork.museum.id%>">
  <ul>
  </ul>
</div>

<% if user_signed_in? %>
  <%= form_for ([@artwork, @comments]) do |f| %>
    <%= render partial: 'user_comments/form', locals: {f: f} %>
  <% end %>
  <br>
  <div class="actions">
    <%= button_to 'Add Artwork to Profile', user_artworks_path(artwork_id: @artwork) %>
  </div>
<% end %>
